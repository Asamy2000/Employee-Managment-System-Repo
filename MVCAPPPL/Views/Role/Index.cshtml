@model IEnumerable<RoleVM>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
<br />
<br />

@if (TempData["Message"] is not null)
{
    <div class="alert alert-primary">
        @TempData["Message"]
    </div>
}
<a class="btn btn-primary" asp-action="Create">Create New Role</a>
<div class="row justify-content-center align-content-center mt-3">
    <form class="row col-8 offset-1">
        <div class="col-8">
            <input placeholder="Search by Name" id="searchBar" type="text" name="name" class="form-control" />
        </div>
      @*   <div class="col-4">
            <input class="btn btn-success" type="submit" value="Search" />
        </div> *@
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>

                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                
               
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(R=> Role.Id)</td>
                    <td>@Html.DisplayFor(R=> Role.RoleName)</td>

                    <partial name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>there is no Roles!!</h3>
    </div>
}

