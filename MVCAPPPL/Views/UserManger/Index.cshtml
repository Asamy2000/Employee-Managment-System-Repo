@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>
<br />
<br />

@if (TempData["Message"] is not null)
{
    <div class="alert alert-primary">
        @TempData["Message"]
    </div>
}
@*<a class="btn btn-primary" asp-action="Create">Create New Employee</a>*@
<div class="row justify-content-center align-content-center mt-3">
    <form class="row col-8 offset-1">
        <div class="col-8">
            <input placeholder="Search by Email" id="searchBar" type="text" name="email" class="form-control" />
        </div>
@*         <div class="col-4">
            <input class="btn btn-success" type="submit" value="Search" />
        </div> *@
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>

                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
               
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(U=> User.Id)</td>
                    <td>@Html.DisplayFor(U=> User.FName)</td>
                    <td>@Html.DisplayFor(U=> User.LName)</td>
                    <td>@Html.DisplayFor(U=> User.Email)</td>
                    <td>@Html.DisplayFor(U=> User.PhoneNumber)</td>
                    <td>@string.Join("  ",User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>there is no Users!!</h3>
    </div>
}

