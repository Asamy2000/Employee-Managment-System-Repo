<section class="sign-in">
    <div class="container">
        @* <div asp-validation-summary="All" class="text-danger"></div> *@

        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/images/signin-image.jpg" alt="sing up image"></figure>
              

            </div>

            <div class="signin-form">
                <h2 class="form-title">Reset Password</h2>




                <form asp-action="ResetPassword" method="post" class="register-form" id="login-form">
                    <div class="form-group">
                        <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="NewPassword" type="password" id="your_name" placeholder="New Password" />
                    </div>
                    <div class="form-group">
                        <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="ConfirmPassword" type="password" id="your_pass" placeholder="Confirm New Password" />
                    </div>
              
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Reset" />
                    </div>
                </form>



              
            </div>
        </div>
    </div>
</section>

@section validationScript {
	<partial name="_ValidationScriptsPartial" />
}

