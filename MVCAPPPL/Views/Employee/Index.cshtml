@model IEnumerable<EmployeeVM>
@{
    ViewData["Title"] = "All Employees";
}

<h1>All Employees</h1>
<br />
<br />

@if (TempData["Message"] is not null)
{
    <div class="alert alert-primary">
        @TempData["Message"]
    </div>
}
<a class="btn btn-primary" asp-action="Create">Create New Employee</a>
<div class="row justify-content-center align-content-center mt-3">
    <form class="row col-8 offset-1">
        <div class="col-8">
            <input placeholder="Search by Name" id="searchBar" type="text" name="SearchValue" class="form-control" />
        </div>
      @*   <div class="col-4">
            <input  class="btn btn-success" type="submit" value="Search"  />
        </div> *@
    </form>
</div>
@if(Model.Count() > 0){
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                
                <td>@Html.DisplayNameFor(E => E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.Age)</td>
                <td>@Html.DisplayNameFor(E => E.Address)</td>
                <td>@Html.DisplayNameFor(E => E.Image)</td>
                <td>@Html.DisplayNameFor(E => E.Department)</td>
                <td>@Html.DisplayNameFor(E => E.Salary)</td>
                <td>@Html.DisplayNameFor(E => E.IsActive)</td>
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                <td>@Html.DisplayNameFor(E => E.Phone)</td>
                <td>@Html.DisplayNameFor(E => E.HireDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Address</td>
                    <td>
                        <img src="~/files/images/@emp.ImageName" class="img-fluid rounded" alt="Employee image" height="50" width="50">
                    </td>
                    <td>@Html.DisplayFor(E=> emp.Department.Name)</td>
                    <td>@Html.DisplayFor(E=> emp.Salary)</td>
                    <td>@Html.DisplayFor(E=> emp.IsActive)</td>
                    <td>@Html.DisplayFor(E=> emp.Email)</td>
                    <td>@emp.Phone</td>
                    <td>@emp.HireDate</td>
                    <partial name="_ButtonsPartialView" model="@emp.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else{
    <div class="mt-4 alert alert-warning">
        <h3>there is no Employess!!</h3>
    </div>
}

